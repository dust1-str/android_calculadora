<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/resultado"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:textSize="100sp"
        app:layout_constraintBottom_toTopOf="@id/botones"
        app:layout_constraintEnd_toEndOf="parent">
    </TextView>

    <LinearLayout
        android:id="@+id/botones"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/reset"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:text="C"
                android:textSize="25sp"
                android:layout_marginRight="5dp"/>

            <Button
                android:id="@+id/dividir"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:text="/"
                android:textSize="25sp"
                android:layout_marginRight="5dp"/>

            <Button
                android:id="@+id/multiplicar"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:text="X"
                android:textSize="25sp"
                android:layout_marginRight="5dp"/>

            <Button
                android:id="@+id/delete"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:text="B"
                android:textSize="25sp"
                android:layout_marginRight="5dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/numero7"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:text="7"
                android:textSize="25sp"
                android:layout_marginRight="5dp"/>

            <Button
                android:id="@+id/numero8"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:text="8"
                android:textSize="25sp"
                android:layout_marginRight="5dp"/>

            <Button
                android:id="@+id/numero9"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:text="9"
                android:textSize="25sp"
                android:layout_marginRight="5dp"/>

            <Button
                android:id="@+id/restar"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:text="-"
                android:textSize="25sp"
                android:layout_marginRight="5dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/numero4"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:text="4"
                android:textSize="25sp"
                android:layout_marginRight="5dp"/>

            <Button
                android:id="@+id/numero5"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:text="5"
                android:textSize="25sp"
                android:layout_marginRight="5dp"/>

            <Button
                android:id="@+id/numero6"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:text="6"
                android:textSize="25sp"
                android:layout_marginRight="5dp"/>

            <Button
                android:id="@+id/sumar"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:text="+"
                android:textSize="25sp"
                android:layout_marginRight="5dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="7dp">

            <Button
                android:id="@+id/numero1"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:text="1"
                android:textSize="25sp"
                android:layout_marginRight="5dp"/>

            <Button
                android:id="@+id/numero2"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:text="2"
                android:textSize="25sp"
                android:layout_marginRight="5dp"/>

            <Button
                android:id="@+id/numero3"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:text="3"
                android:textSize="25sp"
                android:layout_marginRight="5dp"/>

            <Button
                android:id="@+id/igual"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:text="="
                android:textSize="25sp"
                android:layout_marginRight="5dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="7dp">

            <Button
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:text="%"
                android:textSize="25sp"
                android:layout_marginRight="5dp"/>

            <Button
                android:id="@+id/numero0"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:text="0"
                android:textSize="25sp"
                android:layout_marginRight="5dp"/>

            <Button
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:text="."
                android:textSize="25sp"
                android:layout_marginRight="5dp"/>

        </LinearLayout>

        
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>